# Production Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com
VITE_API_TIMEOUT=15000

# Application Configuration
VITE_APP_NAME=Student Marketplace
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PWA=true

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB for production
VITE_UPLOAD_CHUNK_SIZE=2097152  # 2MB chunks for better performance
VITE_ACCEPTED_FILE_TYPES=image/jpeg,image/png,image/webp

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
VITE_PAYPAL_CLIENT_ID=your-production-paypal-client-id
VITE_FACEBOOK_APP_ID=your-production-facebook-app-id

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Development Tools (Disabled in production)
VITE_ENABLE_MOCK_API=false
VITE_SHOW_DEBUG_INFO=false
VITE_ENABLE_REDUX_DEVTOOLS=false

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=cacheFirst
VITE_LAZY_LOAD_IMAGES=true

# Security Configuration
VITE_CSP_NONCE=production-nonce-generated-per-request
VITE_TRUSTED_DOMAINS=your-domain.com,www.your-domain.com,cdn.your-domain.com

# CDN Configuration
VITE_CDN_URL=https://cdn.your-domain.com
VITE_STATIC_URL=https://static.your-domain.com

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=marketplace-theme