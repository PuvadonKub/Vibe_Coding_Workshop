# Production Environment Configuration

# Database Configuration (Use PostgreSQL in production)
DATABASE_URL=postgresql://username:password@db-host:5432/marketplace_prod

# JWT Configuration - Use strong secrets in production
SECRET_KEY=your-production-secret-key-64-characters-minimum-for-maximum-security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production

# CORS Configuration - Restrict to your domain only
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]
PRODUCTION_ORIGIN=https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB for production
UPLOAD_DIR=/var/uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.webp

# Security Configuration
RATE_LIMIT_ENABLED=true
REDIS_URL=redis://redis-server:6379/0

# Email Configuration
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@your-domain.com

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=/var/log/marketplace/app.log
ENABLE_QUERY_LOGGING=false

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY="default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self'"

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=600  # 10 minutes for production
ENABLE_COMPRESSION=true

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# SSL Configuration
SSL_REDIRECT=true
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO
SECURE_SSL_REDIRECT=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict