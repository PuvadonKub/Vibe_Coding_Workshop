# Environment Configuration Template

# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=sqlite:///./marketplace.db

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters-for-security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:8080", "https://localhost:5173"]
PRODUCTION_ORIGIN=https://your-production-domain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.webp,.gif

# Security Configuration
RATE_LIMIT_ENABLED=true
REDIS_URL=redis://localhost:6379/0

# Optional: Email Configuration for notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@studentmarketplace.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
ENABLE_QUERY_LOGGING=false

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY="default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'"

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=300  # 5 minutes
ENABLE_COMPRESSION=true

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false